<% include partials/header %>


<div class="container">
<div class="row">
<h1 style="text-align: center;">Edit <%=p.username%> Your Profile</h1>
<div style="width: 30%; margin: 30px auto;">

<form action="/profile/<%=currentUser.username%>/?_method=PUT" method="POST" >
<div class="form-group">
<input class="form-control" type="text" value="<%=p.name%>" placeholder="name" name="pro[name]">
</div>
<div class="form-group">
        <input class="form-control" type="email" value="<%=p.email%>" placeholder="email" name="pro[email]">
        </div>
        <div class="form-group">
                <input class="form-control" type="text" value="<%=p.image%>" placeholder="image-url" name="pro[image]">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" value="<%=p.contact%>" placeholder="contact" name="pro[contact]">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" value="<%=currentUser.username%>"  name="pro[username]" readonly >
                                </div>
                <div class="form-group">
<button class="btn btn-info btn-lg btn-block">submit!</button>
</div>

</form>
<a href="/profile"><strong><~</strong>Go back</a>
</div>
</div>
</div>


<% include partials/footer%>