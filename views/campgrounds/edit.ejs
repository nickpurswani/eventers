<% include ../partials/header %>


<div class="container">
<div class="row">
<h1 style="text-align: center;">Edit <%=campground.name%></h1>
<div style="width: 30%; margin: 30px auto;">

<form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST" >
<div class="form-group">
<input class="form-control" type="text" value="<%=campground.name%>" name="c[name]">
</div>
<form action="/campgrounds" method="POST" >
    <div class="form-group">
    <input class="form-control" type="number" value="<%=campground.price%>" name="c[price]" min="1" step="1">
    </div>

<div class="form-group">
<input class="form-control" type="text" value="<%=campground.image%>" name="c[image]">
</div>
    
<div class="form-group">
        <input class="form-control" type="text" value="<%=campground.date%>" name="c[date]" readonly>
        </div>
        <div class="form-group">
           
            <input class="form-control" type="text" name="c[location]" id="location" value="<%= campground.location %>">
        </div>
        <div class="form-group">
           
                <input class="form-control" type="text" name="c[address]"  value="<%= campground.address %>">
            </div>
            <div class="form-group">
           
                    <input class="form-control" type="text" name="c[timing]"  value="<%= campground.timing %>">
                </div>
                <div class="form-group">
           
                        <input class="form-control" type="text" name="c[contact]"  value="<%= campground.contact %>">
                    </div>
<div class="form-group">
<input class="form-control" type="text" value="<%=campground.description%>" name="c[description]">
</div>
<div class="form-group">
<button class="btn btn-info btn-lg btn-block">submit!</button>
</div>

</form>
<a href="/campgrounds/<%=campground._id%>"><strong><~</strong>Go back</a>
</div>
</div>
</div>


<% include ../partials/footer%>